<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>ca</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <description>Controls the language in which the application is displayed</description>
        <managed-bean-name>languageSelector</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.LanguageSelector</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Control password recovery by email and secret question</description>
        <managed-bean-name>passwordRecovery</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.PasswordRecovery</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Control user access to the system</description>
        <managed-bean-name>userLogin</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.UserLogin</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Controls user exit to the system</description>
        <managed-bean-name>userLogout</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.UserLogout</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Controls user registration in the system</description>
        <managed-bean-name>userSignup</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.UserSignup</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>validLoginUser</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>invalidLoginUser</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/signup.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>validSignupUser</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>invalidSignupUser</from-outcome>
            <to-view-id>/signup.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/passwordRecovery.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>correctChange</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>wrongChange</from-outcome>
            <to-view-id>/passwordRecovery.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
