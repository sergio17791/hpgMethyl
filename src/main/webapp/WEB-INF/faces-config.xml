<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>ca</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <description>Contains the information of an analysis request</description>
        <managed-bean-name>analysisBean</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.AnalysisRequestBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Controls the sending of analysis requests by users</description>
        <managed-bean-name>analysisDetail</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.MethylationAnalysisDetail</managed-bean-class>      
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
      		<property-name>id</property-name>
      		<value>#{param['id']}</value>
   		</managed-property>
    </managed-bean>
    <managed-bean>
        <description>List requests for analysis by a user</description>
        <managed-bean-name>listUserAnalysis</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.ListUserMethylationAnalysis</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>List requests for analysis by a user</description>
        <managed-bean-name>sendAnalysis</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.SendMethylationAnalysisRequest</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Controls the language in which the application is displayed</description>
        <managed-bean-name>languageSelector</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.LanguageSelector</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Control password recovery by email and secret question</description>
        <managed-bean-name>passwordRecovery</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.PasswordRecovery</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Control user access to the system</description>
        <managed-bean-name>userLogin</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.UserLogin</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Controls user exit to the system</description>
        <managed-bean-name>userLogout</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.UserLogout</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Controls user registration in the system</description>
        <managed-bean-name>userSignup</managed-bean-name>
        <managed-bean-class>es.hpgMethyl.beans.UserSignup</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
